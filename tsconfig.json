{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6",
         "es7",
         "ES2015",
         "ES2016",
         "ES2017",
         "ES2018",
         "ESNext"
      ],
      "target": "es2017",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      // custom configs
      // "noImplicitAny": true,
      // Below for key configs are required to generate .d.ts declaration file alongside the js file
      "declaration": true,
      "declarationMap": true,
      "inlineSourceMap": true,
      "inlineSources": true
   }
}